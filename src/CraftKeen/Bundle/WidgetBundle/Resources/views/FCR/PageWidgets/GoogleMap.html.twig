<div class="row inline-mode">
    <a data-toggle="modal" data-target="#ModalMapEdit" class="button-edit-element" title="Edit element"></a>
    <div id="google_map_contact"
         style="width:100%; height:450px;"
         class="google_map_contact_cls"
         data-id= {{ widget.id }} data-lat= {{ widget.data.lat }}
         data-lng= {{ widget.data.lng }}></div>
</div>
{% if isAdmin %}
    <div id="ModalMapEdit" class="modal fade" role="dialog" data-backdrop="static">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Map Edit</h4>
                </div>
                <div class="modal-body">
                    Address<br>
                    <input type="text" id="address" style="width: 100%;">
                    <input type="hidden" id="input-lat" value="{{ widget.data.lat }}">
                    <input type="hidden" id="input-lng" value="{{ widget.data.lng }}">
                </div>
                <div class="modal-footer">
                    <button type="button" id="accept-changes-map" class="btn btn-success" data-dismiss="modal">Accept
                    </button>
                    <button type="button" id="cancel-changes-map" class="btn btn-default" data-dismiss="modal">Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endif %}
