{% set fields = ['title', 'subtitle', 'items'] %}

{% set widget = widget|merge({'data' : checkWidgetFields(widget.data, fields) }) %}

{{
    react_component(
        widget.dataType, {
            'props':{
                "isLoggedIn": logged,
                "id": widget.id,
                "title": widget.data.title,
                "subtitle": widget.data.subtitle,
                "items": widget.data.items,
                "config": widget.config
            }
        }
    )
}}
