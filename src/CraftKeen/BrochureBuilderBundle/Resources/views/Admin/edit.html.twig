{% extends 'CraftKeenCMSAdminBundle::layout.html.twig' %}

{% block admin_block_title %}User edit{% endblock %}

{% block admin_block_breadcrumb %}
    <li>{{ 'Brochure'|trans }}</li>
	<li><a href="{{ path('brochure_admin_user_index') }}">Users</a></li>
	<li class="active">User Edit</li>
{% endblock %}

{% block admin_block_body %}

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" class="btn btn-default" value="Edit" />
    {{ form_end(edit_form) }}

    <hr />
    <ul class="list-inline list-unstyled ">
        <li>
            <a href="{{ path('brochure_admin_user_index') }}" class="btn btn-default">Back to the list</a>
        </li>
        {% if user.id != app.user.id %}
        <li>
            {{ form_start(delete_form, { 'attr': {'class': 'form-delete'} } ) }}
                <input type="submit" class="btn btn-danger" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
		<li>
			<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" >
				<input type="hidden" id="username" class="form-control" name="username" value="{{ user.email }}" />
				<input type="submit" class="btn btn-primary" value="{{ 'Request new Password'|trans }}" />
			</form>
		</li>
    </ul>
{% endblock %}
