{% extends 'CraftKeenCMSAdminBundle::layout.html.twig' %}

{% block admin_block_title %}User View{% endblock %}

{% block admin_block_breadcrumb %}						
	<li><a href="{{ path('craftkeen_cms_user_admin_user_index') }}">Users</a></li>
	<li class="active">User View</li>
{% endblock %}

{% block admin_block_body %}
    <div class="table-responsive">
        <table class="table table-striped table-condensed table-bordered table-hover">
            <tbody>
                <tr>
                    <th>Id</th>                    
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{% if user.enabled == 1 %}Enabled{%else%}Disabled{%endif%}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>
                        {% for role in user.roles %}
                            {{ role }}
                            {% if not loop.last %},{% endif %}
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <hr />
    <ul class="list-inline list-unstyled">
        <li>
            <a href="{{ path('craftkeen_cms_user_admin_user_index') }}" class="btn btn-default">Back to the list</a>
        </li>
        </li>
        <li>
            <a href="{{ path('craftkeen_cms_user_admin_user_edit', { 'id': user.id }) }}" class="btn btn-default">Edit</a>
        </li>
    </ul>
{% endblock %}
