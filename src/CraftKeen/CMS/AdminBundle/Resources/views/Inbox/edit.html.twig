{% extends 'CraftKeenCMSAdminBundle::layout.html.twig' %}

{% block admin_block_title %}{{ 'Edit Message'|trans }}{% endblock %}

{% set path_prefix = 'craftkeen_cms_admin_inbox_' %}

{% block admin_block_breadcrumb %}
	<li><a href="{{ path(path_prefix~'_index') }}">{{ 'Notifications'|trans }}</a></li>
	<li class="active">{{'Edit Message'|trans}}</li>
{% endblock %}

{% block admin_block_body %}

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" class="btn btn-default" value="Edit" />
    {{ form_end(edit_form) }}

    <hr />
    <ul class="list-inline list-unstyled ">
        <li>
            <a href="{{ path(path_prefix~'_index') }}" class="btn btn-default">{{'Back to the list'|trans}}</a>
        </li>
        {% if is_granted('delete') %}
        <li>
            {{ form_start(delete_form, { 'attr': {'class': 'form-delete'} } ) }}
                <input type="submit" class="btn btn-danger" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
