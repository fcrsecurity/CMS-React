{% extends 'CraftKeenCMSAdminBundle::layout.html.twig' %}

{% block admin_block_title %}{{ 'Edit Site'|trans }}{% endblock %}

{% set path_prefix = 'craftkeen_cms_admin_site_' %}

{% block admin_block_breadcrumb %}
	<li><a href="{{ path(path_prefix~'index') }}">{{ 'Site'|trans }}</a></li>
	<li class="active">{{'Edit Site'|trans}}</li>
{% endblock %}

{% block admin_block_body %}
    
    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
		{% if is_granted('edit') %}
        <input type="submit" class="btn btn-default" value="{{ 'Edit'|trans }}" />
		{% endif %}
    {{ form_end(edit_form) }}

    <ul class="list-inline list-unstyled ">
        <li>
            <a href="{{ path(path_prefix~'index') }}" class="btn btn-info">{{'Back to the list'|trans}}</a>
        </li>
		{% if is_granted('delete') %}
        <li>
            {{ form_start(delete_form, { 'attr': {'class': 'form-delete'} } ) }}
				<input type="submit" value="{{'Delete'|trans}}">
            {{ form_end(delete_form) }}
        </li>
		{% endif %}
    </ul>
{% endblock %}
