<div class="search-result-item page-result">
    {% set url = '/'~findPagePermalinkByName('Executive Leadership') %}
    {% if item.object.category == 2 %}
        {% set url = '/'~findPagePermalinkByName('Board of Directors') %}
    {% endif %}
    <h4><a href="{{ url }}">{{ item.title }}</a></h4>
    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3   text-center item">
        <img class="img-responsive img-circle cursor-pointer" src="{{ item.hiddenMeta }}" alt="" style="max-height: 150px;">
    </div>
    <div>{{ item.shortBody|slice(0, 300)|raw }}...</div>
    <a href="{{ url }}">{{ 'More'|trans }}</a>
    <hr><br>
</div>
