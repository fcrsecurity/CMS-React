<div class="row otheroffices">
    <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
        <div class="row">
            {% for office in offices %}
                {% if office is defined and office is not empty %}
                    <div class="col-xs-12 col-sm-6 col-lg-3 col-md-3">
                        <div class="city-name"><strong>{{ office.city }}</strong></div>
                        <div class="row">
                            <div class="col-lg-12">
                                <p>First Capital Realty Inc.<br>
                                    {{ office.header }}<br>
                                    {{ office.address|raw }}<br>
                                    {{ office.city }}, {{ office.province }}, {{ office.postal }}
                                </p>
                                <p class="phones">
                                    {{'Tel'|trans}}: <a href="tel:{{ office.tel }}">{{ office.tel }}</a><br>
                                    {% if office.fax %}{{'Fax'|trans}}: {{ office.fax }}{% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
