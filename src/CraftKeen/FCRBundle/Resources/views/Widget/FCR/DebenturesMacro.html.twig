        <div class="tab-content">
            <div class="tab-pane fade in active" id="tab1">
                <div class="container-fluid">
                    <div class="table-responsive inline-mode">
                        <a href="{{ path('admin_investors_debenture_index') }}" class="button-edit-element" title="Edit element" ></a>
                        <div class="table_container">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>{{ 'Series'|trans([], 'messages', app.request.locale) }}</th>
                                        <th>{{ 'Maturity Date'|trans([], 'messages', app.request.locale) }}</th>
                                        <th>{{ 'Principal Outstanding (thousands)'|trans([], 'messages', app.request.locale) }}</th>
                                        <th>{{ 'Coupon'|trans([], 'messages', app.request.locale) }}</th>
                                        <th>{{ 'Interest Payment Date'|trans([], 'messages', app.request.locale) }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set items = investors_debenture() %}
                                    {% for item in items %}
                                        <tr>
                                            <td>{{ item.series }}</td>
                                            <td>{{ item.maturityDate|date('M d, Y') }}</td>
                                            <td>{{ item.principalOutstanding }}</td>
                                            <td>{{ item.cupon }}</td>
                                            <td>{{ item.interestPaymentDate }}</td>
                                        </tr>
                                    {% endfor %}
                                    <tr></tr>
                                </tbody>
                            </table>
                            <small>{{ 'Interest paid semi-annually'|trans([], 'messages', app.request.locale) }}</small>
