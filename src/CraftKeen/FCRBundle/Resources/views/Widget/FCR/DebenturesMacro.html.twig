<div class="buffer-5-padding-top buffer-5-padding-bottom">
    <div class="tables debentures-page">
        <ul class="nav nav-tabs" role="tablist">
            <li class="active">
                <a href="#tab1" aria-controls="tab1" role="tab" data-toggle="tab">{{ 'Senior Unsecured Debentures'|trans([], 'messages', app.request.locale) }}</a>
            </li>
