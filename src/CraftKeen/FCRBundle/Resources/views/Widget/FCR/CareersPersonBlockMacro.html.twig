<div class="container-fluid person-block buffer-6-padding-top">
    <div class="row directors-grid">
        <div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 inline-mode">
        <a href="{{ path('admin_careers_employee_index') }}" class="button-edit-element" title="Edit element"></a>
		<div class="row">
			<div class="col-xs-12 col-xs-offset-0 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
				<div class="row">
	                {% for item in employees %}
			            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 text-center item" data-toggle="modal" data-target="#Modal_{{ loop.index }}">
			                <img class="img-responsive img-circle cursor-pointer" src="{{ item.img }}" alt="{{ item.imageAlt }}"/>
			                <p class="name">{{ item.name }}</p>
			                <p class="position">{{ item.position }}</p>
			            </div>
					{% endfor %}
	            </div>
			</div>
		</div>
        </div>
    </div>
    <div class="row">
        {% for item in employees %}
			<div class="modal fade bd-example-modal-lg" id="Modal_{{ loop.index }}" >
	            <div class="modal-dialog modal-lg" role="document">
	                <div class="modal-content">
	                    <div class="modal-body">
	                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	                            <span aria-hidden="true"><em class="fa fa-times" aria-hidden="true"></em></span>
	                        </button>
	                        <div class="modal-info-container container-fluid">
	                            <div class="row">
	                                <div class="col-xs-10 col-xs-offset-1 col-md-10 col-lg-10 col-lg-offset-1">
	                                    <div class="item" id="id{{ loop.index }}">
	                                        <div class="wrapper-photo">
	                                            <img class="img-responsive img-circle" src="{{ item.img }}" alt="{{ item.imageAlt }}"/>
	                                        </div>
	                                        <div class="info">
	                                            <div class="top">
	                                                <span class="name">{{ item.name }}</span><br />
	                                                <span class="thepost">{{ item.position }}</span>
	                                                <br />
	                                                <div class="border"></div>
	                                            </div>
	                                            <div class="middle">{{ item.description | raw }}</div>
	                                        </div>
	                                    </div>
	                                    <div class="questions">
	                                    	{{ item.questions | raw }}
	                                    </div>
	                                </div>
	                            </div>
	                        </div>
	                    </div>
	                </div>
	            </div>
	        </div>
		{% endfor %}
    </div>
</div>
