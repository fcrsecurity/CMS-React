<div class="row">
    <div class="isotope-masonry-gallery">
        {% for item in posts %}
            <div class="grid-item grid-item{{ item.class }}">
                <div class="detail-info">
                    <div class="text">
                        <em class="fa fa-angle-right arr-icon"></em>
                        <span class="head-text">{{ item.head }}</span>
                        <p>{{ item.short | raw }}</p>
                    </div>
                    <a class="more" href="/retail-life/{{ item.slug }}">
                        <em class="fa fa-angle-up " aria-hidden="true"></em>
                        <span>LEARN MORE</span>
                    </a>
                </div>
                <img src="{{ item.image }}" alt="{{ item.imageAlt }}"/>
            </div>
        {% endfor %}
    </div>
</div>
