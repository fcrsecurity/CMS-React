{% extends 'CraftKeenCMSAdminBundle::Default/show.html.twig' %}
{% import 'CraftKeenCMSAdminBundle::macros/crud.html.twig' as CRUD %}
{% set moduleTitle = 'Aoda Long Description'|trans %}
{% set path_prefix = 'admin_fcr_aoda_long_description_' %}
{% set entity = object %}
{% set front_page_preview = 'aoda-long-description' %}


{% block admin_block_body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-striped table-condensed table-bordered table-hover">
                    <tbody>
                    {% for key in entity.getDisplayItems('view') %}
                        {% set value = attribute(entity, key) %}
                        {{ CRUD.renderViewTableRow(key, value) }}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-6"></div>
    </div>

    <ul class="list-inline list-unstyled">
        <li>
            <a href="{{ path(path_prefix~'index') }}" class="btn btn-info">{{ 'Back to the list'|trans }}</a>
        </li>
        <li>
            <a href="{{ path(path_prefix~'edit', { 'id': entity.id }) }}" class="btn btn-success">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form, { 'attr': {'class': 'form-delete'} } ) }}
            <input class="btn btn-danger" type="submit" value="{{ 'Delete'|trans }}">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
