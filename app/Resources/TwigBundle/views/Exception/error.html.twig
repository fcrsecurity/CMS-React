{% extends 'error_base.html.twig' %}

{% block meta_title %}{{ 'Server Error'|trans }}{% endblock %}

{% block hero %}
	<section class="hero-image container-fluid">
		<div class="row">
			<div class="col-xs-10 col-xs-offset-1 text-center">
				<h1 class="text-shadow">{{ 'Something Went Wrong!' }}</h1>
			</div>
		</div>
	</section>
{% endblock %}

{% block body %}
	<section class="container-fluid">
		<div class="row">
			<div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1 buffer-7-top buffer-6-botom text-center">
				<h2>{{ 'Oops! An Error Occurred' }}</h2>
				{{ "Something is broken. Please let us know what you were doing when this error occurred. We will fix it as soon as possible. Sorry for any inconvenience caused." }}
			</div>
		</div>
	</section>
{% endblock %}