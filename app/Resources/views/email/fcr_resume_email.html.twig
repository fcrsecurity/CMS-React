{% extends '::email/base_email.html.twig' %}
{% block email_header %}
	{{'Successfully Applied'|trans}}
{% endblock %}
{% block email_secondary_header %}
	{{careerPositionSubmission.position}}
{% endblock %}
{% block email_body %}
	<table border="0" cellpadding="0" cellspacing="0" width="100%" class="mcnTextBlock" style="min-width:100%;">
		<tbody class="mcnTextBlockOuter">
			<tr>
				<td valign="top" class="mcnTextBlockInner" style="padding-top:9px;">	
					<table align="left" border="0" cellpadding="0" cellspacing="0" style="max-width:100%; min-width:100%;" width="100%" class="mcnTextContentContainer">
						<tbody>
							<tr>
								<td valign="top" class="mcnTextContent" style="padding: 0px 18px 9px;color: #3A3634;text-align: right;">
									<h2 style="text-align: left;"><br><span style="font-family:'Yantramanav', sans-serif">{{careerPositionSubmission.firstName}} {{careerPositionSubmission.lastName}}</span></h2>
								</td>
							</tr>
							<tr>
								<td valign="top" class="mcnTextContent" style="padding: 0px 18px 9px;color: #3A3634;text-align: right;">
									<p style="text-align: left;"><span style="font-family:'Yantramanav', sans-serif">{{ 'Thank you for your interest. You have submitted a resume and will be contacted by one of our Representatives. We will reach out to you within the next 1-2 business days.'|trans }}</span></p>
								</td>
							</tr>
						</tbody>
					</table>
				</td>
			</tr>
		</tbody>
	</table>
{% endblock %}